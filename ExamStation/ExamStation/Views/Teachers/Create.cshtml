@model ExamStation.Models.ViewModels.TeacherCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add Teacher</h2>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="TeacherName" class="control-label col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="TeacherName" class="form-control" />
            <span asp-validation-for="TeacherName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Designation" class="control-label col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="Designation" class="form-control" />
            <span asp-validation-for="Designation" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DateOfBirth" class="control-label col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="DateOfBirth" class="form-control" value="@ViewBag.DateOfBirth"/>
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Gender" class="control-label col-sm-2"></label>
        <div class="col-sm-6">
            @*<input asp-for="Gender" class="form-control" />*@
            <select name="Gender" id="Gender" class="form-control">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Religion" class="control-label col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="Religion" class="form-control" />
            <span asp-validation-for="Religion" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="control-label col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Phone" class="control-label col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="control-label col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="JoiningDate" class="control-label col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="JoiningDate" class="form-control" value="@ViewBag.JoiningDate"/>
            <span asp-validation-for="JoiningDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Photo" class="control-label col-sm-2"></label>
        <div class="col-sm-6">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Teacher" class="btn btn-default" />
    </div>
</form>

