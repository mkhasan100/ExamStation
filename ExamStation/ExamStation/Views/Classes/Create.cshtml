@model ExamStation.Models.Class

@{
    ViewData["Title"] = "Create";
}

<h2>Add Class</h2>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="ClassName" class="control-label col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="ClassName" class="form-control" />
            <span asp-validation-for="ClassName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ClassNumeric" class="control-label col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="ClassNumeric" class="form-control" />
            <span asp-validation-for="ClassNumeric" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TeacherName" class="control-label col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="TeacherName" class="form-control" />
            <span asp-validation-for="TeacherName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Note" class="control-label col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="Note" class="form-control" />
            <span asp-validation-for="Note" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Class" class="btn btn-default" />
    </div>
</form>

