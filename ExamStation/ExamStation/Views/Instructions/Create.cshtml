@model ExamStation.Models.Instruction

@{
    ViewData["Title"] = "Create";
}

<h2>Add Instruction</h2>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Title" class="control-label col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Content" class="control-label col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="Content" class="form-control" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Instruction" class="btn btn-default" />
    </div>
</form>

